{
  "name": "@simplysf/simply-schemas",
  "description": "Simply elegant data loader",
  "version": "1.0.0",
  "author": "@ClayChipps",
  "bugs": "https://github.com/SimplySF/simply-schemas/issues",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.8.1",
    "@salesforce/dev-config": "^4.1.0",
    "@salesforce/prettier-config": "^0.0.3",
    "husky": "^7.0.4",
    "prettier": "^2.8.8",
    "shelljs": "^0.8.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/lib",
    "*.schema.json"
  ],
  "homepage": "https://github.com/SimplySF/simply-schemas",
  "license": "BSD-3-Clause",
  "publishConfig": {
    "access": "public"
  },
  "repository": "SimplySF/simply-schemas",
  "scripts": {
    "build": "wireit",
    "compile": "wireit",
    "format": "wireit",
    "prettier": "prettier ./**/*.{js,json,ts,md} --write",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "compile",
        "lint"
      ]
    },
    "compile": {
      "command": "tsc -p . --pretty --incremental",
      "files": [
        "src/**/*.ts",
        "**/tsconfig.json"
      ],
      "output": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "lint": {
      "command": "eslint src test --color --cache --cache-location .eslintcache",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "**/.eslint*",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test": {
      "dependencies": [
        "test:compile",
        "test:only",
        "lint",
        "link-check"
      ]
    },
    "test:compile": {
      "command": "tsc -p \"./test\" --pretty",
      "files": [
        "test/**/*.ts",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test:only": {
      "command": "nyc mocha \"test/**/*.test.ts\"",
      "env": {
        "FORCE_COLOR": "2"
      },
      "files": [
        "test/**/*.ts",
        "src/**/*.ts",
        "**/tsconfig.json",
        ".mocha*",
        "!*.nut.ts",
        ".nycrc"
      ],
      "output": []
    },
    "link-check": {
      "command": "node -e \"process.exit(process.env.CI ? 0 : 1)\" || linkinator \"**/*.md\" --skip \"CHANGELOG.md|node_modules|test/|confluence.internal.salesforce.com|my.salesforce.com|%s\" --markdown --retry --directory-listing --verbosity error",
      "files": [
        "./*.md",
        "./!(CHANGELOG).md"
      ],
      "output": []
    }
  },
  "exports": "./lib/index.js",
  "type": "module"
}
